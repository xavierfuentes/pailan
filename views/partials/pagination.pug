if pages > 1
  nav.mt-4(aria-label='Page navigation example')
    - var n = 1;
    ul.pagination.justify-content-center
      if page === 1
        li.page-item.disabled
          a.page-link(href='#', tabindex='-1') Previous
      else
        li.page-item
          a.page-link(href='#') Previous

      while n <= 4
        if page === n
          li.page-item.disabled
            a.page-link(href='#', tabindex='-1')= n++
        else
          li.page-item
            a.page-link(href='#')= n++

      if page === pages
        li.page-item.disabled
          a.page-link(href='#', tabindex='-1') Next
      else
        li.page-item
          a.page-link(href='#') Next
