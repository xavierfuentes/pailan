extends ../base

block content
  section#forgot.section
    .container
      .row.justify-content-center
        .col-lg-6
          .title.text-center
            h2
              | Forgot&nbsp
              b Password
            span.title-border
              i.mdi.mdi-set-none
      .row.justify-content-center.mt-4.pt-4
        .col-lg-4
          include ../partials/flash
      .custom-form.mt-4.pt-4
        #message
        form#forgot-form(method='post', name='forgot-form')
          input(type='hidden', name='_csrf', value=_csrf)
          .row.justify-content-center
            .col-lg-4
              include ../partials/flash
          .row
            .col-md-4.offset-md-4
              p Enter your email address below and we will send you password reset instructions.
          .row
            .col-md-4.offset-md-4
              .form-group
                input#email.form-control(name='email', type='text', placeholder='Your email...', required, autofocus)
          .row
            .col-md-4.offset-md-4
              button#submit.submitBnt.btn.btn-primary.btn-custom.btn-block(type='submit') Reset Password
              #simple-msg
